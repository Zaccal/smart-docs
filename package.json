{
  "name": "smart-docs",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@trpc/client": "^11.5.0",
      "@prisma/client": "^6.15.0"
    }
  },
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
